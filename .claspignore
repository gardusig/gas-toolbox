# Ignore everything by default
*

# Explicitly ignore all directories we don't want
coverage/
coverage/**
src/
src/**
tests/
tests/**
node_modules/
node_modules/**
scripts/
scripts/**
.git/
.git/**
.github/
.github/**
.vscode/
.idea/

# Ignore all config and dev files at root
.claspignore
.prettierrc
.prettierignore
.editorconfig
.eslintrc.js
.gitignore
jest.config.ts
tsconfig.json
tsconfig.test.json
tsconfig.tsbuildinfo
package.json
package-lock.json
README.md
LICENSE
appsscript.json
test-functions.gs

# Ignore file types globally
*.map
**/*.map
*.js.map
**/*.js.map
*.d.ts
**/*.d.ts
*.log
*.tmp
*.temp
*.cache
.env*

# Allow dist/ directory ONLY
!dist/

# Ignore non-JS files inside dist/ (must come after !dist/)
dist/**/*.map
dist/**/*.js.map
dist/**/*.d.ts
dist/.clasp.json
